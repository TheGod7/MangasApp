{
  "name": "@mangas-app/common",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "build:js": "swc ./src -d ./dist --strip-leading-paths",
    "build:types": "tsc -p tsconfig.json",
    "build": "npm run build:js && npm run build:types",
    "watch:js": "swc ./src -d ./dist -w --strip-leading-paths",
    "watch:types": "tsc -p tsconfig.json -w",
    "start:dev": "concurrently -k -s first -n js,types --prefix-colors auto \"npm run watch:js\" \"npm run watch:types\""
  },
  "devDependencies": {
    "@swc/cli": "^0.3.0",
    "@swc/core": "^1.3.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
